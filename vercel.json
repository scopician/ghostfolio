{
  "version": 2,
  "builds": [
    {
      "src": "dist/apps/api/main.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/apps/client/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/apps/api/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "dist/apps/client/en/$1"
    }
  ],
  "outputDirectory": "dist",
  "buildCommand": "npm run build:production",
  "installCommand": "npm install"
}
